<head>
    <title>User Form</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <center><h1>User Form</h1></center>
        <form>
            <div class="form-group">
                <label><b>Name:</b></label>
                <input class="form-control"  type="text" id="Name" placeholder="Please Enter Your Name">
            </div>

            <div class="form-group">
                <label><b>Email:</b></label>
                <input class="form-control"  type="text" id="Email" placeholder="Please Enter Your Email">
            </div>

            <div class="form-group">
                <label><b>Gender:</b></label>

                <div class="form-check" id="Gender">
                    <input class="form-check-input" type="radio" name="Gender" value="Male">
                    <label class="form-check-label">Male</label>
                </div>

                <div class="form-check" id="Gender">
                    <input class="form-check-input" type="radio" name="Gender" value="Female">
                    <label class="form-check-label">Female</label>
                </div>

                <div class="form-check" id="Gender">
                    <input class="form-check-input" type="radio" name="Gender" value="Other">
                    <label class="form-check-label">Other</label>
                </div>
            </div>

            <div class="form-group">
                <label><b>State:</b></label>
                <select class="form-control" id="State">
                    <option selected disabled>Select State</option>
                    <option value="PU">Punjab</option>
                    <option value="SI">Sindh</option>
                    <option value="BA">Balochistan</option>
                    <option value="KP">Khyber Pakhtunkhwa</option>
                </select>
            </div>

            <button class="btn btn-dark" type="submit">Submit</button>
        </form>
    </div>
</body>

